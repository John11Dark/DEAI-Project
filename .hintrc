{
  "extends": [
    "development"
  ],
  "hints": {
    "detect-css-reflows/composite": "off",
    "detect-css-reflows/paint": "off",
    "detect-css-reflows/layout": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "font-synthesis",
          "-webkit-text-size-adjust",
          "backdrop-filter"
        ]
      }
    ],
    "axe/aria": [
      "default",
      {
        "aria-valid-attr-value": "off"
      }
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not ios_saf <= 14.8",
    "not samsung <= 20"
  ]
}